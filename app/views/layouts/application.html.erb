<!DOCTYPE html>
<html>
<head>
  <title>Classy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://vjs.zencdn.net/5.10.8/video-js.css" rel="stylesheet">
  <script src="https://vjs.zencdn.net/5.10.8/video.js"></script> 
</head>
<body>

<div id="wrap">
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <li><%= link_to image_tag('classy2_logo2.png'), root_path, class: "navbar-brand" %></li>

      
      
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <ul class="nav navbar-nav">
          <li>
              <%= link_to 'See All Courses', courses_path %>
          </li>
          <% if user_signed_in? %>
            <li><%= link_to 'My Dashboard', dashboard_path %></li>
            <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>          
          <% else %>
            <li><%= link_to 'Sign up', new_user_registration_path %></li>
            <li><%= link_to 'Sign in', new_user_session_path %></li>
          <% end %>
        <!-- <li><a href="#">Link</a></li> -->
        <!-- <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Separated link</a></li>
          </ul>
        </li> -->
        </ul>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

</div>

<br class="clr" />

<div id="footer">
  <div class="container">
    <div class="col-xs-12 col-sm-3 foot-space">
        <b>Teachers</b>
        <br />
        <%= link_to 'Teach a Course', new_instructor_course_path %>
        <br />
        <%= link_to 'My Dashboard', dashboard_path %>
      </div>
      <div class="col-xs-12 col-sm-3 foot-space">
        <b>About</b>
        <br />
        <%= link_to 'Privacy Policy', privacy_path %>
      </div>
      <div class="col-xs-12 col-sm-3 foot-space">
        <b>Contact</b>
        <br />
        <%= mail_to "chris@crossphd.com" do %>
          <span>chris@crossphd.com</span>
        <% end %>
        <br />
        Los Angeles, CA
        <br />
      </div>
      <div class="col-xs-12 col-sm-3 text-center social">
        <b>Social</b>
        <br />
        <%= link_to 'https://twitter.com/crossphd', :target => "_blank" do %>
          <%= image_tag 'twitter2.png', class: 'social-button' %>
        <% end %>
        <%= link_to 'https://github.com/CRossPhD', :target => "_blank" do %>
          <%= image_tag 'github2.png', class: 'social-button' %>
        <% end %>
        <%= link_to 'https://medium.com/@crossphd', :target => "_blank" do %>
          <%= image_tag 'medium2.png', class: 'social-button' %>
        <% end %>
      </div>
  </div>
</div>

</body>
</html>
